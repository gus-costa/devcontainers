{
    "id": "node",
    "version": "1.0.0",
    "name": "Node.js",
    "description": "Installs Node.js runtime with npm using official binaries from nodejs.org.",
    "documentationURL": "https://github.com/gus-costa/devcontainers/tree/main/features/node",
    "options": {
        "version": {
            "type": "string",
            "default": "22",
            "description": "Node.js major version to install"
        }
    },
    "mounts": [
        {
            "source": "devcontainer-nodemodules-${devcontainerId}",
            "target": "${containerWorkspaceFolder}/node_modules",
            "type": "volume"
        }
    ],
    "containerEnv": {
        "NODE_OPTIONS": "--max-old-space-size=2048"
    },
    "installsAfter": []
}